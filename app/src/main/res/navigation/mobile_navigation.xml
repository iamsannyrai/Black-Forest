<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_home">

    <fragment
        android:id="@+id/nav_home"
        android:name="com.incwell.blackforest.ui.home.HomeFragment"
        android:label="Black Forest"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_nav_home_to_productFragment"
            app:destination="@id/productFragment" />
        <action
            android:id="@+id/action_nav_home_to_subCategoryFragment"
            app:destination="@id/subCategoryFragment" />
        <action
            android:id="@+id/action_nav_home_to_categoryFragment"
            app:destination="@id/categoryFragment" />
        <action
            android:id="@+id/action_nav_home_to_searchresultFragment"
            app:destination="@id/searchresultFragment" />
    </fragment>

    <fragment
        android:id="@+id/nav_about"
        android:name="com.incwell.blackforest.ui.about.AboutFragment"
        android:label="About"
        tools:layout="@layout/fragment_about" />

    <fragment
        android:id="@+id/nav_menu"
        android:name="com.incwell.blackforest.ui.menu.MenuFragment"
        android:label="Our Menu"
        tools:layout="@layout/fragment_menu" />

    <fragment
        android:id="@+id/nav_contact"
        android:name="com.incwell.blackforest.ui.contact.ContactFragment"
        android:label="Contact"
        tools:layout="@layout/fragment_contact" />
    <fragment
        android:id="@+id/productFragment"
        android:name="com.incwell.blackforest.ui.product.ProductFragment"
        tools:layout="@layout/fragment_product" />
    <fragment
        android:id="@+id/subCategoryFragment"
        android:name="com.incwell.blackforest.ui.category.subCategory.SubCategoryFragment"
        android:label="Sub Categories"
        tools:layout="@layout/fragment_subcategory" />
    <fragment
        android:id="@+id/categoryFragment"
        android:name="com.incwell.blackforest.ui.category.CategoryFragment"
        android:label="All Categories"
        tools:layout="@layout/fragment_category" >
        <action
            android:id="@+id/action_categoryFragment_to_subCategoryFragment"
            app:destination="@id/subCategoryFragment" />
    </fragment>
    <fragment
        android:id="@+id/searchresultFragment"
        android:name="com.incwell.blackforest.ui.search.SearchFragment"
        android:label="Search Results"
        tools:layout="@layout/fragment_searchresult">
        <argument
            android:name="searchTag"
            app:argType="string" />
    </fragment>

</navigation>